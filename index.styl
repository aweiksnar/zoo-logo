@require 'nib'

colors = {
  bg: maroon
}

size = {
  innerCircle: unit(70, 'px')
  outerCircle: unit(170, 'px')
  diagonalWidth: unit(220, 'px')
  diagonalHeight: unit(20, 'px')
}

centered-absolute()
  position: absolute
  transform: translate(-50%, -50%)
  left: 50%
  top: 50%

.zoo-logo
  position: relative
  border-radius: 50%
  background: transparent
  width: size.outerCircle
  height: size.outerCircle
  box-shadow: inset 0 0 0 25px colors.bg
  &::before
    content: ""
    centered-absolute()
    border-radius 50%
    background: colors.bg
    width: size.innerCircle
    height: size.innerCircle
    float: left
  &::after
    content: ""
    centered-absolute()
    border-radius: 50%
    background: colors.bg
    width: size.diagonalWidth
    height: size.diagonalHeight
    transform: translate(-50%, -50%) rotate(-45deg)
